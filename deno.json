{
  "$schema": "https://raw.githubusercontent.com/denoland/deno/main/cli/schemas/config-file.v1.json",
  "name": "@nyoon/lib",
  "version": "0.5.7",
  "exports": {
    "./alien-signals": "./alien-signals/main.ts",
    "./base": "./base/main.ts",
    "./crypto": "./crypto/main.ts",
    "./csv": "./csv/main.ts",
    "./fp": "./fp.ts",
    "./match": "./match/main.ts",
    "./query": "./query.ts",
    "./schema": "./schema/main.ts"
  },
  "lint": {
    "rules": {
      "include": [
        "default-param-last",
        "eqeqeq",
        "explicit-module-boundary-types",
        "guard-for-in",
        "no-eval",
        "no-inferrable-types",
        "no-self-compare",
        "no-sparse-arrays",
        "no-useless-rename",
        "prefer-ascii",
        "triple-slash-reference",
        "verbatim-module-syntax"
      ],
      "exclude": [
        "ban-types",
        "no-cond-assign",
        "no-control-regex",
        "no-explicit-any",
        "no-invalid-regexp"
      ]
    }
  },
  "compilerOptions": {
    "lib": ["deno.ns", "dom", "dom.iterable", "dom.asynciterable"]
  },
  "tasks": {
    "vectors": "fd '\\.test\\.ts' -x deno run --allow-net --allow-write"
  }
}
