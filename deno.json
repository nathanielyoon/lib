{
  "$schema": "https://raw.githubusercontent.com/denoland/deno/main/cli/schemas/config-file.v1.json",
  "license": "GPL-3.0-or-later",
  "workspace": [
    "./test",
    "./25519",
    "./aead",
    "./base",
    "./csv",
    "./hash",
    "./inline",
    "./json",
    "./paseto",
    "./query",
    "./result",
    "./signal",
    "./url"
  ],
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "dom.asynciterable", "deno.ns"],
    "exactOptionalPropertyTypes": true
  },
  "lint": {
    "rules": {
      "include": [
        "default-param-last",
        "explicit-module-boundary-types",
        "no-inferrable-types",
        "no-self-compare",
        "no-sparse-arrays",
        "no-useless-rename",
        "prefer-ascii",
        "verbatim-module-syntax"
      ],
      "exclude": [
        "ban-types",
        "no-cond-assign",
        "no-control-regex",
        "no-explicit-any"
      ]
    }
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.14",
    "fast-check": "npm:fast-check@^4.2.0"
  }
}
